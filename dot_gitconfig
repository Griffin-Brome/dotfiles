# This is Git's per-user configuration file.
[core]
	excludesfile = ~/.gitignore_global
[init]
	defaultBranch = main
[alias]
	sw = switch
	ci = commit
	st = status
	pu = push -u origin HEAD
	br = branch
	unstage = restore --staged
	co = checkout
        pt = push --tags
	rb = rebase
	rbi = rebase --interactive
	pf = push --force-with-lease
	cb = choose-branch
[push]
	autoSetupRemote = true
[pull]
	rebase = true
[fetch]
	prune = true
	pruneTags = true
	all = true

